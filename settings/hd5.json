{
    "dataset" : {
        "type" : "hd5",
        "path" : "../data/data_dragon_sequential.hd5",
        "validation_portion" : 0.1,
        "test_portion" : 0.1,
        "shuffle" : true,
        "features" : [
            "FirstCharge", "CumulativeCharge", "Time",
            "RecoX", "RecoY", "RecoZ",
            "RecoAzimuth", "RecoZenith"
        ],
        "max_charge" : null
    },
    "model" : {
        "type" : "gcnn",
        "hidden_units_graph_convolutions" : [64, 64, 64, 64],
        "hidden_units_fully_connected" : [32, 32],
        "hidden_units_lstm" : [32, 16, 1],
        "use_batchnorm" : false,
        "dropout_rate" : 0.2
    },
    "training" : {
        "metrics" : [
            "accuracy"
        ],
        "learning_rate" : 1e-3,
        "batch_size" : 8,
        "epochs" : 5,
        "checkpoint_directory" : "./training/recurrent",
        "checkpoint_period" : 1,
        "use_class_prior" : true
    }
}
