{
    "dataset" : {
        "type" : "hd5",
        "path" : "../data/data_dragon2.hd5",
        "validation_portion" : 0.1,
        "test_portion" : 0.1,
        "shuffle" : true,
        "features" : [
            "ChargeFirstPulse", "TimeFirstPulse", "ChargeLastPulse", "TimeLasPulse", "TimeStdDeviation", "IntegratedCharge",
            "VertexX", "VertexY", "VertexZ"
        ],
        "max_charge" : null
    },
    "model" : {
        "type" : "gcnn",
        "hidden_units_graph_convolutions" : [64, 64, 64, 64, 64],
        "hidden_units_fully_connected" : [1],
        "use_batchnorm" : false,
        "dropout_rate" : 0.3
    },
    "training" : {
        "metrics" : [
            "accuracy"
        ],
        "learning_rate" : 1e-4,
        "batch_size" : 128,
        "epochs" : 50,
        "directory" : "./training/hd5-{0}",
        "checkpoint_period" : 5,
        "use_class_weights" : true
    }
}
