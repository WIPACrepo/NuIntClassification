{
    "dataset" : {
        "type" : "hd5",
        "path" : "../data/data_dragon4.hd5",
        "validation_portion" : 0.1,
        "test_portion" : 0.1,
        "shuffle" : true,
        "features" : [
            "ChargeFirstPulse", "TimeFirstPulse", "ChargeLastPulse", "TimeLastPulse", "TimeVariance", "IntegratedCharge",
            "TimeMaxPulse", "ChargeMaxPulse",
            "VertexX", "VertexY", "VertexZ"
        ],
        "max_charge" : null,
        "balance_classes" : true,
        "min_track_length" : 50,
        "max_cascade_energy" : 10,
        "distances_precomputed" : true
    },
    "model" : {
        "type" : "gcnn",
        "hidden_units_graph_convolutions" : [64, 64, 64, 64, 64],
        "hidden_units_fully_connected" : [32, 1],
        "use_batchnorm" : false,
        "dropout_rate" : 0.5
    },
    "training" : {
        "metrics" : [
            "accuracy"
        ],
        "learning_rate" : 5e-4,
        "batch_size" : 64,
        "epochs" : 5,
        "directory" : "./training/hd5-{0}",
        "checkpoint_period" : 5,
        "use_class_weights" : false
    }
}
