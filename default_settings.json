{
    "dataset" : {
        "type" : "hdf5",
        "path" : "../data/data_dragon.hd5",
        "validation_portion" : 0.1,
        "test_portion" : 0.1,
        "shuffle" : true,
        "features" : [
            "FirstCharge", "CumulativeCharge", "Time",
            "VertexX", "VertexY", "VertexZ",
            "RecoX", "RecoY", "RecoZ",
            "RecoAzimuth", "RecoZenith"
        ],
        "graph_features" : null,
        "distances" : "Distances",
        "max_charge" : null,
        "distances_precomputed" : false,
        "balance_classes" : false,
        "min_track_length" : null,
        "max_cascade_energy" : null,
        "seed" : null
    },
    "model" : {
        "type" : "gcnn",
        "hidden_units_graph_convolutions" : [64, 64, 64],
        "hidden_units_lstm" : [32, 16],
        "hidden_units_fully_connected" : [32, 1],
        "hidden_units_graph_features" : null,
        "use_batchnorm" : true,
        "dropout_rate" : 0.5,
        "use_residual" : true
    },
    "training" : {
        "loss" : "binary_crossentropy",
        "learning_rate" : 5e-4,
        "learning_rate_scheduler" : "reduce_on_plateau",
        "learning_rate_scheduler_patience" : 2,
        "learning_rate_decay" : 1e-5,
        "batch_size" : 64,
        "epochs" : 25,
        "directory" : "./hd5_{0}/",
        "checkpoint_period" : 1,
        "use_class_weights" : true,
        "logfile" : null
    }
}